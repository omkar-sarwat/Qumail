{
  "name": "qumail-electron",
  "version": "0.1.0",
  "description": "QuMail Quantum-Encrypted Email Desktop Client",
  "main": "electron.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite dev --config vite.config.js",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron . --dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build --config vite.config.js",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:renderer && electron-builder --linux"
  },
  "build": {
    "appId": "com.qumail.desktop",
    "productName": "QuMail",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/renderer/**/*",
      "electron.js",
      "preload.js",
      "src/main/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron.js"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
