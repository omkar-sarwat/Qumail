# -------------------------------
# Global cloud resources
# -------------------------------
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/qumail
REDIS_URL=redis://default:password@redis-xxxxx.cloud.redislabs.com:12345

# -------------------------------
# Google OAuth / Gmail API
# Obtain from Google Cloud Console
# -------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GMAIL_SCOPES="https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send https://www.googleapis.com/auth/userinfo.email"
JWT_SECRET=change-me-please

# -------------------------------
# KME service specific values
# Duplicate per Render service
# -------------------------------
PORT=8010
KME_ID=kme1
SHARED_POOL_ENABLED=true

# -------------------------------
# Backend specific overrides
# -------------------------------
DATABASE_URL=${MONGODB_ATLAS_URI}
KME1_URL=https://qumail-kme1.onrender.com
KME2_URL=https://qumail-kme2.onrender.com
QUMAIL_API_BASE_URL=https://qumail-backend.onrender.com/api/v1

# -------------------------------
# Electron frontend local config
# (Used by qumail-electron/config.*)
# -------------------------------
QUMAIL_OAUTH_REDIRECT=qumail://auth/callback
QUMAIL_STORE_KEY=set-a-random-32-byte-string
